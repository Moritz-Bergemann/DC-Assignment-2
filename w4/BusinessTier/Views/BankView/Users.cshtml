
@{
    ViewBag.Title = "UserPage";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<h1>UserPage</h1>
Look for users here 🙂

<h2>Find A UserPage</h2>
<form>
    <input class="form-control" type="number" id="user-id" placeholder="UserPage ID" />
</form>
<button class="btn btn-primary" id="search-user-button">Search</button>

<div id="user-details" hidden>
    <h3>UserPage Name</h3>
    <p>More details go here</p>
</div>

<script>
    $("#search-user-button").on('click',
        () => {
            console.log("Doing Search!");
            $.ajax({
                url: "api/UserPage/" + $("#user-id").val(),
                type: 'get',
                contentType: 'application/json',
                success: (data, textStatus, jQxhr) => {
                    var obj = data;
                    $("#user-details").toggle(); //Shows the element
                    $("#user-details").find("h3").text(`${data.fName} ${data.lName}`);
                    $("#user-details").find("p").text(`UserPage ID: ${data.id}`);
                },
                error: (jqXhr, textStatus, errorThrown) => {
                    alert("Oh no an error occurred 😢\n" + errorThrown);
                }
            });
        });
</script>