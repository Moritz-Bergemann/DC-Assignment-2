<h1>
    BankDB Banking Advanced WebApp
</h1>

<!--Header-->
<div>
    <button id="usersPageButton">Users</button>
    <button id="accountsPageButton">Accounts</button>
    <button id="transactionsPageButton">Transactions</button>
</div>

<!--Main Content-->
<div id="mainBody">
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script>
    //Load main pages
    $("#usersPageButton").on('click',
        () => {
            $.ajax({
                url: '/user/',
                type: 'get',
                processData: false,
                success: (data, textStatus, jQxhr) => {
                    $("#mainBody").html(data);
                },
                error: (j,t,e) => {
                    alert(e);
                }
            });
        });
</script>